@model TodoApp.Core.DTOs.UserChangePasswordDto

@{
ViewData["Title"] = "Change Password";
}

<div class="d-flex justify-content-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex flex-column align-items-center">
            <form asp-action="ChangePassword" method="post" class="row col-xl-6 col-lg-6 col-md-12 col-12">
                <div class="mb-3 col-12">
                    <label asp-for="OldPassword" class="form-label">Old Password</label>
                    <input asp-for="OldPassword" type="password" class="form-control" />
                </div>
                <div class="mb-3 col-12">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                </div>

                <div class=" my-2 d-flex justify-content-center ">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>
    </div>
