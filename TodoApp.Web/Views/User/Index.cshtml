@model TodoApp.Core.DTOs.UserAppDto

@{
    ViewData["Title"] = "User Profile";
}

<div class="d-flex justify-content-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex flex-column align-items-center">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <form asp-action="Update" method="post" class="row col-xl-6 col-lg-6 col-md-12 col-12">
                <input type="hidden" asp-for="UserName"/>
                <div class="form-group col-12 my-2">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control"/>
                </div>
                <div class="form-group col-12 my-2">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input asp-for="Surname" class="form-control"/>
                </div>
                <div class="form-group col-12 my-2">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control"/>
                </div>
                <div class="d-flex justify-content-center">

                    <button type="submit" class="btn btn-primary mt-3">Update</button>
                </div>
            </form>
        </div>

        <div class="col-12 mt-4">
            <div class="d-flex justify-content-center">
                <div>
                    <form asp-action="Remove" method="post">
                        <button type="submit" class="btn btn-danger">Delete Account</button>
                    </form>
                </div>
                <div class="ms-2">
                    <a href="@Url.Action("ChangePassword", "User")" class="btn btn-warning text-white">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>