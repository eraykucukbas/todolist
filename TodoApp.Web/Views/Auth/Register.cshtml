@model TodoApp.Core.DTOs.UserCreateDto

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex flex-column align-items-center">
    <form asp-action="Register" method="post" class="row col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="form-group col-12 my-2">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <label asp-for="Surname" class="form-label">Surname</label>
            <input asp-for="Surname" class="form-control"/>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <a class="" asp-controller="Auth" asp-action="Login">I have an account</a>
        </div>
        <div class=" my-2 d-flex justify-content-center ">
            <button type="submit" class="btn btn-primary ">Register</button>
        </div>
    </form>
</div>