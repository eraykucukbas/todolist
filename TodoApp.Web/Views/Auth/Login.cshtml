@model TodoApp.Core.DTOs.LoginDto

@{
ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="d-flex flex-column align-items-center">
    <form asp-action="Login" method="post" class="row col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="form-group col-12 my-2">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" id="userName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <a class="" asp-controller="Auth" asp-action="Register">Create a new account</a>
        </div>

        <div class=" my-2 d-flex justify-content-center ">
            <button type="submit" class="btn btn-primary ">Login</button>
        </div>
    </form>
</div>
